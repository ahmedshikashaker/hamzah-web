import { ReactNode } from "react";

interface BadgeProps {
  children: ReactNode;
  variant?: "default" | "accent";
  size?: "sm" | "md";
  className?: string;
}

export function Badge({ children, variant = "default", size = "sm", className = "" }: BadgeProps) {
  return (
    <span className={`inline-flex items-center font-medium rounded-full ${
      variant === "accent" ? "badge" : "bg-[var(--bg-tertiary)] text-[var(--text-muted)] border border-[var(--border-color)]"
    } ${size === "sm" ? "px-2.5 py-1 text-xs" : "px-3.5 py-1.5 text-xs"} ${className}`}>
      {children}
    </span>
  );
}
