import { Metadata } from "next";
import { services } from "@/lib/content";
import { Contact } from "@/components/sections/Contact";
import { Button } from "@/components/ui/Button";
import { Icon } from "@/components/ui/icons";
import { Badge } from "@/components/ui/Badge";
import { ScrollReveal } from "@/components/effects/ScrollReveal";
import { ArrowRightIcon } from "@/components/ui/icons";

export const metadata: Metadata = {
  title: "Our Services",
  description: "Comprehensive solutions to drive your business forward.",
};

export default async function ServicesPage() {
  return (
    <>
      <section className="py-20 lg:py-28 bg-[var(--bg-primary)]">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center mb-14">
            <ScrollReveal animation="fade-up">
              <span className="badge mb-4">What We Do</span>
            </ScrollReveal>
            <ScrollReveal animation="fade-up" delay={100}>
              <h1 className="text-4xl sm:text-5xl lg:text-6xl font-bold text-[var(--text-primary)]">
                Our Services
              </h1>
            </ScrollReveal>
          </div>

          <div className="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5">
            {services.map((s, i) => (
              <ScrollReveal key={s.id} animation="fade-up" delay={i * 40 + 200}>
                <div id={s.id} className="card p-6 group">
                  <div className="icon-box w-14 h-14 mb-5">
                    <Icon name={s.icon} size={28} />
                  </div>
                  <h2 className="text-lg font-semibold text-[var(--text-primary)] mb-2 group-hover:text-[#4A1F6E] dark:group-hover:text-[#FFB951] transition-colors">
                    {s.title}
                  </h2>
                  <p className="text-sm text-[var(--text-secondary)]">{s.description}</p>
                  {s.tags && (
                    <div className="flex flex-wrap gap-1.5 mt-4">
                      {s.tags.slice(0, 3).map((t) => <Badge key={t}>{t}</Badge>)}
                    </div>
                  )}
                </div>
              </ScrollReveal>
            ))}
          </div>

          <ScrollReveal animation="fade-up" delay={600}>
            <div className="mt-14 text-center">
              <Button href="#contact" size="lg" icon={<ArrowRightIcon />}>Get in Touch</Button>
            </div>
          </ScrollReveal>
        </div>
      </section>
      <Contact />
    </>
  );
}
